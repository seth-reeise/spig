<h1 class="text-2xl font-bold mb-4">Books</h1>

<form action="<%= @books %>" method="GET" class="mb-4">
  <div class="flex items-center">
    <label class="mr-2 font-medium">Search by Title:</label>
    <input type="text" name="title" value="<%= params[:title] %>" class="border rounded py-1 px-2">
    <button type="submit" class="ml-2 px-4 py-1 rounded text-white bg-indigo-500 hover:bg-indigo-600">Search</button>
  </div>
</form>

<br>

<table>

    <tr class="bg-gray-100">
      <th class="table-spacing">Title</th>
      <th class="table-spacing">Author</th>
      <th class="table-spacing">Year</th>
      <th class="table-spacing">ISBN</th>
    </tr>

    <% @books.each do |book| %>
      <tr>
        <td class="table-spacing"><%= book.title %></td>
        <td class="table-spacing"><%= book.author %></td>
        <td class="table-spacing"><%= book.year %></td>
        <td class="table-spacing"><%= book.isbn %></td>
      </tr>
    <% end %>
  </table>

<br>
<%= will_paginate @books %>
